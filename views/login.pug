extends page-layout.pug 
block content
    include template-parts/header.pug
    if errors
      each e in errors
        p #{e.error}
          
    div.login-signup-form
      h3.
        Log in

      form(method='POST', class="col s12")
        div.input-field.col.s6
          label(for='username') username
          +formField('text', 'username')
        div.input-field.col.s6
          label(for='password') password
          +formField('password', 'password')
        +formField('hidden', '_csrf')(value= _csrf)
        +formField('submit', 'login')(class="waves-effect waves-light btn", id="submit", value="login")

      div.login-signup-other-option
        p not a member yet? 
          +a( sails.getUrlFor('UserController.register'), 'sign up')
